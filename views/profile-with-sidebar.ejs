        /* Stili per la dashboard e sidebar */
        .dashboard-grid {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 2rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
}

/* Responsive per mobile */
@media (max-width: 768px) {
