        }
        
        .sidebar-menu {
            padding: 1.5rem;
        }
        
        .sidebar-menu h3 {
            margin: 0 0 1rem;
            font-size: 1.25rem;
            color: #374151;
        }
        
        .sidebar-nav {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .sidebar-nav li {
            margin-bottom: 0.5rem;
        }
        
