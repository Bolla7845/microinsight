    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Gestione del form di contatto
            const contactForm = document.getElementById('contact-form');
            const feedbackMessage = document.getElementById('feedback-message');
            
            // Verifica se l'URL contiene un parametro di success
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('feedback')) {
                const feedbackType = urlParams.get('feedback');
                let message = '';
                
                if (feedbackType === 'success') {
                    feedbackMessage.className = 'alert alert-success';
                    message = 'Messaggio inviato con successo! Ti risponderemo al più presto.';
                } else if (feedbackType === 'error') {
                    feedbackMessage.className = 'alert alert-danger';
                    message = 'Si è verificato un errore nell\'invio del messaggio. Riprova più tardi.';
                }
                
                if (message) {
                    feedbackMessage.textContent = message;
                    feedbackMessage.style.display = 'block';
                    
                    // Nascondi il messaggio dopo 5 secondi
                    setTimeout(function() {
                        feedbackMessage.style.display = 'none';
                    }, 5000);
                    
                    // Pulisci l'URL senza ricaricare la pagina
                    if (history.pushState) {
                        const newUrl = window.location.protocol + "//" + window.location.host + window.location.pathname + window.location.hash;
                        window.history.pushState({path: newUrl}, '', newUrl);
                    }
                }
            }
        });
    </script>

