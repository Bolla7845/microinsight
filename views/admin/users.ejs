    const isLimited = user.limitazione_trattamento === true || user.limitazione_trattamento === 't' || user.limitazione_trattamento === 'true';
    %>
    <% if (isLimited) { %>
        <span class="badge bg-warning">Limitato</span>
        <small class="d-block" style="font-size: 0.7rem;"><%= user.motivo_limitazione || 'N/A' %></small>
        <% if (user.data_limitazione) { %>
            <small class="d-block" style="font-size: 0.6rem; color: #666;">
                dal <%= new Date(user.data_limitazione).toLocaleDateString('it-IT') %>
            </small>
        <% } %>
    <% } else { %>
        <span class="badge bg-success">Normale</span>
    <% } %>
</td>
<td>
                                    <div class="action-buttons">
                                        <a href="/admin/user/<%= user.id %>" class="btn btn-sm btn-info" title="Visualizza">
                                            <i class="fas fa-eye"></i>
                                        </a>
   <% 
const isLimited = user.limitazione_trattamento === true || user.limitazione_trattamento === 't' || user.limitazione_trattamento === 'true';
%>
<% if (isLimited) { %>
    <button class="btn btn-sm btn-success toggleLimitazioneBtn" 
            data-id="<%= user.id %>" data-nome="<%= user.nome %>" 
