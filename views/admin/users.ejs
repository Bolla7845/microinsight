    <!-- Modal per creare un nuovo utente -->
    <div class="modal fade" id="createUserModal" tabindex="-1" aria-labelledby="createUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createUserModalLabel">Crea Nuovo Utente</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
                </div>
                <form action="/admin/users/create" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="newName" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="newName" name="nome" required>
                        </div>
                        <div class="mb-3">
                            <label for="newEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="newEmail" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">Password</label>
                            <input type="password" class="form-control" id="newPassword" name="password" required>
                        </div>
                        <div class="mb-3">
                            <label for="newRole" class="form-label">Ruolo</label>
                            <select class="form-select" id="newRole" name="ruolo_id">
                                <option value="2">Utente</option>
                                <option value="1">Amministratore</option>
                            </select>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="newActive" name="attivo" checked>
                            <label class="form-check-label" for="newActive">
                                Utente attivo
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                        <button type="submit" class="btn btn-success">Crea Utente</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal per modificare un utente -->
    <div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editUserModalLabel">Modifica Utente</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
                </div>
                <form id="editUserForm" action="/admin/users/update" method="POST">
                    <div class="modal-body">
                        <input type="hidden" id="editUserId" name="id">
                        <div class="mb-3">
                            <label for="editName" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="editName" name="nome" required>
                        </div>
                        <div class="mb-3">
                            <label for="editEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" id="editEmail" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="editRole" class="form-label">Ruolo</label>
                            <select class="form-select" id="editRole" name="ruolo_id">
                                <option value="2">Utente</option>
                                <option value="1">Amministratore</option>
                            </select>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="editActive" name="attivo">
                            <label class="form-check-label" for="editActive">
                                Utente attivo
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                        <button type="submit" class="btn btn-warning">Aggiorna</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal di conferma eliminazione -->
    <div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteUserModalLabel">Conferma Eliminazione</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
                </div>
                <div class="modal-body">
                    <p>Sei sicuro di voler eliminare l'utente <strong id="deleteUserName"></strong>?</p>
                    <p class="text-danger">Questa azione non puÃ² essere annullata!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <form id="deleteUserForm" action="/admin/users/delete" method="POST">
                        <input type="hidden" id="deleteUserId" name="id">
                        <button type="submit" class="btn btn-danger">Elimina</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal per gestione limitazione -->
<div class="modal fade" id="limitazioneModal" tabindex="-1" aria-labelledby="limitazioneModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="limitazioneModalLabel">Gestione Limitazione Trattamento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
            </div>
            <form id="limitazioneForm" action="/admin/users/toggle-limitazione" method="POST">
                <div class="modal-body">
                    <input type="hidden" id="limitazioneUserId" name="userId">
                    <input type="hidden" id="limitazioneAttiva" name="attiva">
                    
                    <p>Stai per <strong id="limitazioneAction"></strong> la limitazione del trattamento per l'utente <strong id="limitazioneUserName"></strong></p>
                    
                    <div id="motivoContainer" class="mb-3" style="display: none;">
                        <label for="motivoLimitazione" class="form-label">Motivo (opzionale)</label>
                        <input type="text" class="form-control" id="motivoLimitazione" name="motivo" 
                               placeholder="Es: Richiesta utente, contestazione, verifica...">
                    </div>
                    
                    <div class="alert alert-info" id="limitazioneInfo">
                        <strong>Cosa succede:</strong>
                        <ul id="limitazioneEffects" class="mb-0 mt-2">
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" id="confirmLimitazioneBtn" class="btn">Conferma</button>
                </div>
            </form>
        </div>
    </div>
</div>

