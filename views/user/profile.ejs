                                    </div>
                                </div>
                                
                                <div class="stat-item">
                                    <div class="stat-icon">
                                        <i class="fas fa-chart-bar"></i>
                                    </div>
                                    <div class="stat-info">
                                        <span class="stat-label">Analisi Gratuite Rimanenti</span>
                                        <span class="stat-value"><%= user.analisi_gratuite || 0 %></span>
                                    </div>
                                </div>
                                
