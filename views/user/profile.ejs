                                    <div class="stat-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="stat-info">
                                        <span class="stat-label">Ultimo Accesso</span>
                                        <span class="stat-value"><%= user.ultimo_accesso ? new Date(user.ultimo_accesso).toLocaleString('it-IT') : 'N/A' %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
